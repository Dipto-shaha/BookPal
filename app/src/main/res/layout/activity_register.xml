<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fillViewport="true"
    android:scrollbarStyle="outsideOverlay"
    tools:context=".activities.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/black"
                app:srcCompat="@drawable/logo_no_background" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_margin"
                android:fontFamily="serif"
                android:text="@string/registerBanner"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/title"
                android:textStyle="bold" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/input_bg"
            android:backgroundTint="@color/white">

            <LinearLayout
                android:padding="3dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <EditText
                    android:id="@+id/editTextfName"
                    style="@style/FirebaseUI.TextInputEditText.NameField"
                    android:layout_width="0dp"
                    android:minHeight="48dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:hint="@string/first_name"
                    android:inputType="textPersonName"
                    android:drawableStart="@drawable/custom_person_icon"
                    android:drawablePadding="@dimen/drawablePadding"
                    android:paddingStart="@dimen/drawablePadding"
                    android:paddingEnd="@dimen/drawablePadding"
                    android:background="@drawable/custom_edit_text"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

                <EditText
                    android:id="@+id/editTextlName"
                    style="@style/FirebaseUI.TextInputEditText.NameField"
                    android:layout_width="0dp"
                    android:minHeight="48dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:hint="@string/last_name"
                    android:inputType="textPersonName"
                    android:drawableStart="@drawable/custom_person_icon"
                    android:drawablePadding="@dimen/drawablePadding"
                    android:paddingStart="@dimen/drawablePadding"
                    android:paddingEnd="@dimen/drawablePadding"
                    android:background="@drawable/custom_edit_text"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />
            </LinearLayout>

            <EditText
                android:id="@+id/editTextMobile"
                style="@style/FirebaseUI.TextInputEditText.NameField"
                android:layout_width="match_parent"
                android:minHeight="48dp"
                android:layout_marginStart="@dimen/layout_margin"
                android:layout_marginTop="@dimen/layout_margin"
                android:layout_marginEnd="@dimen/layout_margin"
                android:hint="@string/mobile"
                android:inputType="number"
                android:drawableStart="@drawable/custom_phone_icon"
                android:drawablePadding="@dimen/drawablePadding"
                android:paddingStart="@dimen/drawablePadding"
                android:paddingEnd="@dimen/drawablePadding"
                android:background="@drawable/custom_edit_text"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

            <EditText
                android:id="@+id/editTextEmail"
                style="@style/FirebaseUI.TextInputEditText.NameField"
                android:layout_width="match_parent"
                android:minHeight="48dp"
                android:layout_marginStart="@dimen/layout_margin"
                android:layout_marginTop="@dimen/layout_margin"
                android:layout_marginEnd="@dimen/layout_margin"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:drawableStart="@drawable/custom_email_icon"
                android:drawablePadding="@dimen/drawablePadding"
                android:paddingStart="@dimen/drawablePadding"
                android:paddingEnd="@dimen/drawablePadding"
                android:background="@drawable/custom_edit_text"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

            <EditText
                android:id="@+id/editTextPassword"
                style="@style/FirebaseUI.TextInputEditText.NameField"
                android:layout_width="match_parent"
                android:minHeight="48dp"
                android:layout_marginStart="@dimen/layout_margin"
                android:layout_marginTop="@dimen/layout_margin"
                android:layout_marginEnd="@dimen/layout_margin"
                android:hint="@string/password"
                android:inputType="numberPassword"
                android:drawableStart="@drawable/custom_lock_icon"
                android:drawablePadding="@dimen/drawablePadding"
                android:paddingStart="@dimen/drawablePadding"
                android:paddingEnd="@dimen/drawablePadding"
                android:background="@drawable/custom_edit_text"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

            <EditText
                android:id="@+id/editTextConfirmPassword"
                style="@style/FirebaseUI.TextInputEditText.NameField"
                android:layout_width="match_parent"
                android:minHeight="48dp"
                android:layout_marginStart="@dimen/layout_margin"
                android:layout_marginTop="@dimen/layout_margin"
                android:layout_marginEnd="@dimen/layout_margin"
                android:hint="@string/confirm_password"
                android:inputType="numberPassword"
                android:drawableStart="@drawable/custom_lock_icon"
                android:drawablePadding="@dimen/drawablePadding"
                android:paddingStart="@dimen/drawablePadding"
                android:paddingEnd="@dimen/drawablePadding"
                android:background="@drawable/custom_edit_text"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

            <Button
                android:id="@+id/buttonSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/layout_margin"
                android:layout_marginBottom="@dimen/layout_margin"
                android:text="@string/signup"
                android:background="@drawable/btn_bg"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity = "center"
                android:visibility="gone"
                style="@android:style/Animation" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="@string/already_have_an_account"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginStart="40dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/loginButtonFromRegisterLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/signInFromRegisterLayout"
                    android:layout_marginStart="10dp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/darkRed"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView3" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>



    </LinearLayout>

</ScrollView>